# =============================================
# RENDER DEPLOYMENT CONFIGURATION
# =============================================
# When deploying to Render, set these environment variables in the Render dashboard
# or use the render.yaml blueprint for automatic setup.

# =============================================
# Server Configuration
# =============================================
NODE_ENV=production
PORT=5000
API_VERSION=v1

# =============================================
# Database - RENDER POSTGRESQL
# =============================================
# On Render, use the connection string from your PostgreSQL database:
# Format: postgresql://username:password@hostname:5432/database
# Example: postgresql://myuser:mypass@my-db-host.render.com:5432/my_db
DATABASE_URL=postgresql://username:password@hostname:5432/database

# =============================================
# JWT Configuration
# =============================================
# On Render, you can use 'generateValue: true' in render.yaml
# or set a secure random value manually
JWT_SECRET=your-super-secret-jwt-key-min-32-chars
JWT_EXPIRES_IN=7d

# =============================================
# Frontend URL - RENDER
# =============================================
# Replace with your actual frontend URL on Render
FRONTEND_URL=https://your-frontend-app.onrender.com

# =============================================
# Card Public URL - RENDER
# =============================================
# URL where the public card page is accessible
CARD_PUBLIC_URL=https://your-frontend-app.onrender.com/card

# =============================================
# Cloudinary Configuration
# =============================================
# Get these from your Cloudinary dashboard:
# https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# =============================================
# Optional: Email Notifications (SMTP)
# =============================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password

# =============================================
# RENDER-SPECIFIC NOTES
# =============================================
# 1. Build Command: npm ci && npx prisma generate && npm run build
# 2. Start Command: node dist/index.js
# 3. Health Check: /api/v1/health
# 4. Runtime: Docker (using the included Dockerfile)
# 5. Region: Frankfurt (or your preferred region)
